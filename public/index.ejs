// Change the progress bar value (percentage)
function setProgressBarValue(element, fillElement, newValue) {
  // Ensure the value is within the valid range (0 to 100)
  var sanitizedValue = Math.max(0, Math.min(100, newValue));

  // Update the aria-valuenow attribute
  element.setAttribute('aria-valuenow', sanitizedValue);

  // Update the width of the progress bar fill element
  fillElement.style.width = sanitizedValue + '%';
}

// Example: Set the progress bar value to 75%
